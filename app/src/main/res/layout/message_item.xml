<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewSender"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_gravity="left"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#D9C0F1"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/textTextViewSender"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nameTextViewSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRecipient"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_gravity="right"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#E5F1C0"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textTextViewRecipient"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/nameTextViewRecipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>